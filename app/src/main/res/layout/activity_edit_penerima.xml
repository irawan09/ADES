<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Activity.EditPenerimaActivity">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Biodata Penerima"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

                <EditText
                    android:id="@+id/ubah_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:fontFamily="sans-serif"
                    android:textSize="13sp"
                    android:background="@drawable/bg_edittext_menu"
                    android:hint="Nama"/>

                <EditText
                    android:id="@+id/ubah_ktp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:fontFamily="sans-serif"
                    android:textSize="13sp"
                    android:background="@drawable/bg_edittext_menu"
                    android:hint="Nomor KTP"/>

                <EditText
                    android:id="@+id/ubah_kontak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:fontFamily="sans-serif"
                    android:textSize="13sp"
                    android:hint="No. Handphone"
                    android:background="@drawable/bg_edittext_menu"/>

                <EditText
                    android:id="@+id/ubah_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:inputType="textWebEmailAddress"
                    android:fontFamily="sans-serif"
                    android:textSize="13sp"
                    android:hint="E-Mail"
                    android:background="@drawable/bg_edittext_menu"/>

                <Spinner
                    android:id="@+id/ubah_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:background="@drawable/bg_edittext_menu"/>

                <Spinner
                    android:id="@+id/ubah_hobi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:background="@drawable/bg_edittext_menu"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="Sosial Media"
                    android:textColor="#000000"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/ubah_instagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:fontFamily="sans-serif"
                    android:textSize="13sp"
                    android:hint="Instagram"
                    android:background="@drawable/bg_edittext_menu"/>

                <EditText
                    android:id="@+id/ubah_twitter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:fontFamily="sans-serif"
                    android:textSize="13sp"
                    android:hint="Twitter"
                    android:background="@drawable/bg_edittext_menu"/>

                <EditText
                    android:id="@+id/ubah_youtube"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:fontFamily="sans-serif"
                    android:textSize="13sp"
                    android:hint="YouTube"
                    android:background="@drawable/bg_edittext_menu"/>

                <EditText
                    android:id="@+id/ubah_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:fontFamily="sans-serif"
                    android:textSize="13sp"
                    android:hint="Facebook"
                    android:background="@drawable/bg_edittext_menu"/>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Perbaharui Data"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:background="@drawable/bg_button"/>
    </LinearLayout>

</LinearLayout>